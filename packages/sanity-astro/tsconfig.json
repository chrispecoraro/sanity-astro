{
  "extends": "astro/tsconfigs/base",
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./**/*.astro", "./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules/*", "./vite*.ts", "dist"],
  "compilerOptions": {
    "rootDir": "src",
    "module": "Node16",
    "isolatedModules": false,
    "strict": false,
    "jsx": "preserve"
  }
}