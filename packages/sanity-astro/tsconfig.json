{
  "include": ["/**/*.ts", "/**/*.astro", "virtual-sanity.d.ts"],
  "exclude": ["node_modules", "dist", "studio", "*.config.ts"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node16",
    "target": "ES2022",
    "module": "Node16",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  }
}
